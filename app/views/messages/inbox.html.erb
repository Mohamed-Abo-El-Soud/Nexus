<% provide(:title, "Inbox") %>
<% provide(:logo, "Inbox") %>
<% provide(:hid, "Inbox") %>

  <% provide(:body, "grey lighten-2") %>
  <div class="row">
    <aside class="col s12 m5">
      <br/>
      <h1 class="text-secondary huge slab-font hide-on-small-only">Inbox</h1>
    </aside>
    
    <% if @feed_items.any? %>
      <!-- content -->
      <div id="content" class="col s12 m7 grey lighten-2">
        <h3 id="messages-count" class="text-secondary">Messages (<%= @feed_items.count %>)</h3>
        <div class="messages">
          <%= render "shared/content", messages: @feed_items, show_unread: true, show_sender: true %>
          <br/>
          <%= pagination_change @feed_items %>
        </div>
      </div>
      <!-- content end -->
    <% end %>
    
  </div>