<div id="new-message" class="modal front text-primary">
  <%= form_for(message, url: messages_inbox_path, html: {class: "col s12", id: "new-message-form"}) do |f| %>
      <div class="modal-content">
        <h4>New message</h4>
        <%= render 'shared/error_messages', subject: message %>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label :title, class: "active" %>
            <%= f.text_field :title, class: "validate" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label :sender_id, class: "active" %>
            <%= f.text_area :sender_id, value: @account.email, class: "validate" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label :reciever_id, class: "active" %>
            <%= f.number_field :reciever_id, class: "validate" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label :content, class: "active" %>
            <%= f.text_area :content, class: "validate" %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= link_to "Send", "#",
          {onClick: "$(this).closest('form.col.s12').submit()", id: "save-button",
            class: "modal-action modal-close waves-effect waves-green btn-flat"} %>
        <%= link_to "#", {onClick: "$(this).closest('form.col.s12').submit()", id: "save-button",
            class: "modal-action modal-close waves-effect waves-green btn-flat"} do %>
            <i class="material-icons right">send</i>
            Send
            <% end %>
        <a href="#!" id="cancel-button" class=" modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
      </div>
  <% end %>
</div>