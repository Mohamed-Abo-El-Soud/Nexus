<!-- log-in -->
<div id="log-in" class="modal front">
  <div class="modal-content">
    <h4>Log in</h4>
    <form id="settings-form" class="col s12">
      <div class="row">
        <div class="input-field col s12 m6">
          <i class="material-icons prefix">person</i>
          <input id="email" placeholder="mohamed.aaes@gmail.com" 
                 type="email" class="validate">
          <label for="email">Email</label>
        </div>
        <div class="input-field col s12 m6">
          <i class="material-icons prefix">vpn_key</i>
          <label for="password">Password</label>
          <input class="validate" id="password" type="password">
        </div>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <a href="#!" id="save-button" class=" modal-action modal-close waves-effect waves-green btn-flat">Log in</a>
    <a href="#!" id="cancel-button" class=" modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
  </div>
</div>
<!-- log-in end -->

<!-- sign-up -->
<div id="sign-up" class="modal front">
  <div class="modal-content">
    <h4>Sign up</h4>
    <form id="settings-form" class="col s12">
      <div class="row">
        <div class="input-field col s12 m6">
          <input id="first_name" type="text" class="validate">
          <label for="first_name" class="active">First Name</label>
        </div>
        <div class="input-field col s12 m6">
          <input id="last_name" type="text" class="validate">
          <label for="last_name" class="active">Last Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">account_circle</i>
          <input id="email" type="email" class="validate">
          <label for="email" class="active">Email</label>
        </div>
      </div>
      <div class="row" id="password-input">
        <div id="shown" class="input-field col s12">
          <i class="material-icons prefix">vpn_key</i>
          <input id="password" type="password" class="validate">
          <label for="password" class="active">Password</label>
        </div>
        <div id="hidden" class="input-field col s12 hide">
          <input id="password" type="password" class="validate">
          <label for="password" class="active">Enter the password again</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="mdi-communication-phone prefix"></i>
          <input id="icon_telephone" type="tel" class="validate">
          <label for="icon_telephone">Telephone</label>
        </div>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <a href="#!" id="save-button" class=" modal-action modal-close waves-effect waves-green btn-flat">Sign up</a>
    <a href="#!" id="cancel-button" class=" modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
  </div>
</div>
<!-- sign-up end -->