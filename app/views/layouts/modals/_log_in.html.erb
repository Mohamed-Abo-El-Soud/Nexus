<!-- log-in -->
<div id="log-in" class="modal front">
  <%= form_for(:session, url: login_path, html: {class: "col s12", id: "log-in-form"}) do |f| %>
    <div class="modal-content">
      <h4>Log In</h4>
      <div class="row">
        <div class="input-field col s12 m6">
          <i class="material-icons prefix">person</i>
          <%= f.label :email, class: "active" %>
          <%= f.email_field :email, class: "validate" %>
        </div>
        <div class="input-field col s12 m6">
          <i class="material-icons prefix">vpn_key</i>
          <%= f.label :password, class: "active" %>
          <%= f.password_field :password, class: "validate" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m6">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Remember me on this computer" %>
          <br/>
          <br/>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= link_to "Log in", "#",
        {onClick: "$(this).closest('form#log-in-form.col.s12').submit()", id: "save-button",
          class: "modal-action modal-close waves-effect waves-green btn-flat "} %>
      <a href="#!" id="cancel-button" class=" modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
      <%= link_to "Forgot password", new_password_reset_path, class: "btn-flat " %>
    </div>
  <% end %>
</div>
<!-- log-in end -->
